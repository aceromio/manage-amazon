<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> 
      <%= f.label :name,'名前' %>
      <%= f.text_field :name %>
      
      <%= f.label :email,'メールアドレス' %>
      <%= f.email_field :email %>
      
      <%= f.label :prefecture,'都道府県'  %>
      <%= f.select :prefecture,options_for_select(['北海道','青森','岩手','宮城','秋田','山形','福島','茨城','栃木','群馬','埼玉','千葉','東京','神奈川','新潟','富山','石川','福井','山梨','長野','岐阜','静岡','愛知','三重','滋賀','京都','大阪','兵庫','奈良','和歌山','鳥取','島根','岡山','広島','山口','徳島','香川','愛媛','高知','福岡','佐賀','長崎','熊本','大分','宮崎','鹿児島','沖縄'], @user.prefecture), {}, { :class => 'form-control' } %>
      <%#ゆくゆくは、DBで登録多い順で都道府県を並べたい%>
      <%= f.label :phone ,'電話番号' %>
      <%= f.text_field :phone ,placeholder: "ハイフンの入力はいりません"%>
      
      <%= f.label :password ,'パスワード' %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "もう一度入力をお願いします。" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create mcy account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>